<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../../partials/head %>
    <script src="/scripts/objects.js"></script>
</head>
<body class="container">

	<header>
		<% include ../../partials/header %>
	</header>

	<main>
        <div class='page-header'>
            Add new price check object
        </div>

        <a class='navigation-button' href='/products'>
            <i class="fa fa-angle-left" aria-hidden="true"></i> Go back to all objects
        </a>

        <table style='width: 100%;'>
            <tr>
                <td>
                    <img id='objectImage' src='' style='width:100%;' class='invisible' />
                </td>
                <td>
                    <div class='form-div'>
                        <form name='addPriceObject' method="post" action="/products/create">
                            <fieldset>
                                <div class='form-body-div'>
                                    <label for='objectUrl'>Object URL</label> 
                                    <input id='objectUrl' name='objectUrl' type='text' onchange='analyzeObject();' autofocus />
                                    
                                    <div id='loading-div' class='invisible'>
                                        <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
                                    </div>

                                    <div id='additionalFields' class='invisible'>
                                        <input id='imageUrl' name='imageUrl' type='hidden' />

                                        <label for='objectName'>Object name</label> 
                                        <input id='objectName' name='objectName' type='text' />
                                        
                                        <table>
                                            <tr>
                                                <td width="80%">
                                                    <label for='objectPrice'>Price</label> 
                                                    <input id='objectPrice' name='objectPrice' type='text' />
                                                </td>
                                                <td width="20%">
                                                    <label for='objectCurrencySymbol'>Currency</label>
                                                    <input id='objectCurrency' name='objectCurrency' type='hidden' />
                                                    <input id='objectCurrencySymbol' name='objectCurrencySymbol' type='text' style='text-align: center;' disabled="disabled" />
                                                </td>
                                        </table>
                                        
                                        <label for='objectDescription'>Description</label> 
                                        <textarea id='objectDescription' name='objectDescription'></textarea>
                                    </div>
                                </div>

                                <div class='form-commands-div'>
                                    <button type='submit' class='submit-button'>Create</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </td>
            </tr>
        </table>
	</main>

	<footer>
		<% include ../../partials/footer %>
	</footer>
	
</body>
</html>